{
  "author": "wx-chevalier@github",
  "description": "lego-rule-engine",
  "license": "MIT",
  "keywords": [
    "webpack",
    "react"
  ],
  "name": "lego-rule-engine",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/wx-chevalier/Legoable"
  },
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{ts,tsx,scss,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run copy && npm run build:umd",
    "build:cjs": "tsc --project ./tsconfig.cjs.json && npm run copy",
    "build:umd": "NODE_ENV=production webpack --config ./scripts/webpack/webpack.config.umd.js",
    "clean": "rimraf dist",
    "copy": "copyfiles -u 1 './src/**/*.(less|svg)' dist/cjs/",
    "dev": "webpack-dev-server --config ./scripts/webpack/webpack.config.dev.js --hot",
    "pub": "npm run clean && npm run build && npm publish",
    "start": "npm run dev",
    "test": "jest --config ../../scripts/jest/jest.config.js",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm run cleanCov && npm test -- --coverage"
  },
  "dependencies": {
    "@types/clone": "^0.1.30",
    "@types/debug": "^4.1.4",
    "eventemitter3": "^3.1.2",
    "lodash.isobjectlike": "^4.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "selectn": "^1.1.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/eventemitter3": "^2.0.2",
    "@types/jest": "^24.0.13",
    "@types/object-hash": "^1.2.0",
    "@types/react-dom": "^16.8.4",
    "@types/uuid": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "autoprefixer": "9.5.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^6.26.3",
    "classnames": "^2.2.6",
    "colors": "^1.3.3",
    "copy-webpack-plugin": "^5.0.3",
    "copyfiles": "^2.1.0",
    "css-loader": "2.1.1",
    "enzyme": "^3.9.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.3.4",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "json-server": "0.15.0",
    "lerna": "^3.14.1",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.7.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "parallelshell": "^3.0.2",
    "postcss-loader": "3.0.0",
    "prettier": "^1.17.1",
    "react-hot-loader": "^4.8.8",
    "resolve-url-loader": "3.1.0",
    "rimraf": "^2.6.3",
    "style-loader": "0.23.1",
    "svg-inline-loader": "^0.8.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "6.0.1",
