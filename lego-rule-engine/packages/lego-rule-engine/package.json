    "wasm-loader": "^1.3.0",
    "webpack": "^4.32.2",
    "webpack-cli": "3.3.2",
    "webpack-dashboard": "3.0.7",
    "webpack-dev-server": "^3.4.1",
    "webpack-merge": "^4.2.1"
  },
  "files": [
    "dist/"
  ]
}
