{
  "author": "wxyyxc1992@github",
  "description": "lego-form-builder",
  "license": "MIT",
  "keywords": [
    "webpack",
    "react"
  ],
  "name": "lego-form-builder",
  "version": "0.0.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/wxyyxc1992/Legoble"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{ts,tsx,scss,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:cjs && npm run copy && npm run build:umd",
    "build:cjs": "tsc --project ./tsconfig.cjs.json",
    "build:umd": "NODE_ENV=production webpack --config ./scripts/webpack/webpack.config.umd.js",
    "copy": "copyfiles -u 1 './src/**/*.css' dist/cjs/",
    "dev": "webpack-dev-server --config ./scripts/webpack/webpack.config.dev.js --hot",
    "pub": "npm run build && npm publish",
    "start": "npm run dev"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "antd": "^3.16.6",
    "immer": "^3.1.1",
    "jsoneditor": "^5.32.5",
    "jsoneditor-react": "^1.0.0",
    "lego-form-antd": "^0.0.6",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-jsonschema-form": "^1.5.0",
    "smoothscroll-polyfill": "^0.4.4",
    "validator.js": "^2.0.3"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/jest": "24.0.12",
    "@types/react-dom": "^16.8.4",
    "@types/react-jsonschema-form": "^1.3.2",
    "@types/react-router-dom": "^4.3.2",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@types/validator": "^10.11.0",
    "autoprefixer": "9.5.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^6.26.3",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^5.0.3",
    "copyfiles": "^2.1.0",
    "css-loader": "2.1.1",
    "enzyme": "^3.9.0",
    "file-loader": "3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.2.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "jest": "24.7.1",
    "jest-cli": "24.7.1",
    "json-server": "0.14.2",
    "lerna": "^3.13.4",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "parallelshell": "^3.0.2",
    "postcss-loader": "3.0.0",
    "react-hot-loader": "^4.8.4",
    "react-router-dom": "^5.0.0",
    "resolve-url-loader": "3.1.0",
    "rimraf": "^2.6.3",
    "style-loader": "0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "5.4.4",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "3.4.5",
    "uglifyjs-webpack-plugin": "2.1.2",
    "url-loader": "^1.1.2",
